<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mystical_gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFirstPinnacleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="First Pinnacle"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tvFirstPinnacleAgeRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ages 0-35" />

        <TextView
            android:id="@+id/tvFirstPinnacleValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstPinnacleAgeRange"
            tools:text="0" />

        <TextView
            android:id="@+id/tvFirstPinnacleExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstPinnacleValue"
            tools:text="Explanation for the first pinnacle." />

        <TextView
            android:id="@+id/tvSecondPinnacleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Second Pinnacle"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstPinnacleExplanation"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tvSecondPinnacleAgeRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstPinnacleExplanation"
            tools:text="Ages 35-44" />

        <TextView
            android:id="@+id/tvSecondPinnacleValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSecondPinnacleAgeRange"
            tools:text="0" />

        <TextView
            android:id="@+id/tvSecondPinnacleExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSecondPinnacleValue"
            tools:text="Explanation for the second pinnacle." />

        <TextView
            android:id="@+id/tvThirdPinnacleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Third Pinnacle"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSecondPinnacleExplanation"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tvThirdPinnacleAgeRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSecondPinnacleExplanation"
            tools:text="Ages 44-53" />

        <TextView
            android:id="@+id/tvThirdPinnacleValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvThirdPinnacleAgeRange"
            tools:text="0" />

        <TextView
            android:id="@+id/tvThirdPinnacleExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvThirdPinnacleValue"
            tools:text="Explanation for the third pinnacle." />

        <TextView
            android:id="@+id/tvFourthPinnacleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fourth Pinnacle"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvThirdPinnacleExplanation"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tvFourthPinnacleAgeRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvThirdPinnacleExplanation"
            tools:text="Ages 53 onwards" />

        <TextView
            android:id="@+id/tvFourthPinnacleValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFourthPinnacleAgeRange"
            tools:text="0" />

        <TextView
            android:id="@+id/tvFourthPinnacleExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFourthPinnacleValue"
            tools:text="Explanation for the fourth pinnacle." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
