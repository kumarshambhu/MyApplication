<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/mystical_gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Row 1 -->
        <TextView
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mystical_font"
            android:text="@string/birth_numbers"
            android:textColor="@color/gold"
            android:textAlignment="center"
            android:textSize="28sp" />

        <!-- Row 2: Three Columns -->
        <TextView
            android:id="@+id/row2_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mystical_font"
            android:text="@string/birth_day"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/row2_col2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/row2_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row1"
            app:layout_constraintStart_toEndOf="@id/row2_col1"
            app:layout_constraintEnd_toStartOf="@id/row2_col3"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mystical_font"
            android:text="@string/birth_month"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/row2_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row1"
            app:layout_constraintStart_toEndOf="@id/row2_col2"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/birth_year"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintWidth_percent="0.33" />

        <!-- Row 3: Three Columns -->
        <TextView
            android:id="@+id/tvBirthDayNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintTop_toBottomOf="@id/row2_col1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvBirthMonthNumber"
            android:fontFamily="@font/mystical_font"
            android:textColor="@color/gold"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/tvBirthMonthNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintTop_toBottomOf="@id/row2_col1"
            app:layout_constraintStart_toEndOf="@id/tvBirthDayNumber"
            app:layout_constraintEnd_toStartOf="@id/tvBirthYearNumber"
            android:fontFamily="@font/mystical_font"
            android:textColor="@color/gold"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintWidth_percent="0.33" />


        <TextView
            android:id="@+id/tvBirthYearNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0000"
            app:layout_constraintTop_toBottomOf="@id/row2_col1"
            app:layout_constraintStart_toEndOf="@id/tvBirthMonthNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/mystical_font"
            android:textColor="@color/gold"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintWidth_percent="0.33" />

        <View
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/tvBirthDayNumber"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/gold"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/sun_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Sun"
            app:layout_constraintTop_toBottomOf="@id/seperator1"
            android:src="@drawable/ic_earth"
            android:layout_gravity="center"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Row 4 -->
        <TextView
            android:id="@+id/row4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/birth_cycles_text"
            app:layout_constraintTop_toBottomOf="@id/sun_image"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/seperator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/row4"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/gold"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Row 5 -->
        <TextView
            android:id="@+id/tvBirthDayInterpretation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/interpretation"
            app:layout_constraintTop_toBottomOf="@id/seperator2"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/seperator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvBirthDayInterpretation"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"/>



        <TextView
            android:id="@+id/tvBirthMonthInterpretation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/interpretation"
            app:layout_constraintTop_toBottomOf="@id/seperator3"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/seperator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvBirthMonthInterpretation"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvBirthYearInterpretation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/interpretation"
            app:layout_constraintTop_toBottomOf="@id/seperator4"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/seperator5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/tvBirthYearInterpretation"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/gold"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvLuckyNumberLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lucky_number"
            app:layout_constraintTop_toBottomOf="@id/seperator5"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:layout_marginTop="15dp"
            android:textColor="@color/gold"
            android:textSize="28sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLuckyNumberValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/tvLuckyNumberLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/mystical_font"
            android:textColor="@color/gold"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLuckyNumberMeaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lucky_number_meaning"
            app:layout_constraintTop_toBottomOf="@id/tvLuckyNumberValue"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
